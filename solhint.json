{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": [
      "error",
      "0.8.4"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "not-rely-on-time": [
      "off"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "reason-string": ["off"]
  }
}